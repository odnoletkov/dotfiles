[user]
	name = Maksim Odnoletkov
	email = odnoletkov@mail.ru
[mailmap]
	file = ~/.config/git/mailmap
[log]
	date = format:%H:%M %d.%m.%y
[pretty]
	line = format:%C(yellow)%h %C(white dim)%ad %C(cyan dim)%<(2,trunc)%aN%C(reset)%C(auto)%d %s
[format]
	pretty = line
[diff "localizablestrings"]
	textconv = "iconv -f utf-16 -t utf-8"
[push]
	default = simple
[diff "plist"]
	textconv = plutil -convert xml1 -o -
[merge]
	tool = opendiff_silent
[mergetool "opendiff_silent"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\" -merge \"$MERGED\" 2> /dev/null
[difftool]
	prompt = false
[status]
	short = true
	branch = true
