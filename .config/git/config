[user]
	name = Maksim Odnoletkov
	email = odnoletkov@mail.ru
[mailmap]
	file = ~/.config/git/mailmap
[log]
	date = format:%H:%M %d.%m.%y
[pretty]
	line = format:%C(yellow)%h %C(white dim)%ad %C(cyan dim)%aN%C(reset)%C(auto)%d %s
[format]
	pretty = line
[push]
	default = simple
[status]
	short = true
	branch = true
[diff "plist"]
	textconv = plutil -convert xml1 -o -
[core]
	pager = diff-so-fancy | less -S
[merge]
	tool = opendiff
[difftool]
	prompt = false
[mergetool]
	keepBackup = false
[alias]
	up = !git for-each-ref --sort=-committerdate --format=\"%(HEAD) %(refname:short) %(upstream:track)\" refs/heads | grep \"\\[.*\\]$\"
[pager]
	status = true
[interactive]
	singleKey = true
	diffFilter = diff-highlight
[blame]
	blankboundary = true
	date = short
[color "diff"]
	meta = magenta bold
	func = cyan
