[mailmap]
	file = ~/.config/git/mailmap
[log]
	date = format:%H:%M %d.%m.%y
[pretty]
	line = format:%C(yellow)%h %C(white dim)%ad %C(cyan dim)%<(2,trunc)%aN%C(reset)%C(auto)%d %s
[format]
	pretty = line
[push]
	default = simple
[status]
	short = true
	branch = true
[diff]
	tool = opendiff
[difftool]
	prompt = false
[diff "localizablestrings"]
	textconv = iconv -f utf-16 -t utf-8
[diff "plist"]
	textconv = plutil -convert xml1 -o -
