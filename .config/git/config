	name = Maksim Odnoletkov
	email = odnoletkov@mail.ru
[status]
	short = true
	branch = true
[core]
	pager = diff-highlight | less
[merge]
	tool = vimdiff
[difftool]
	trustExitCode = true
[mergetool]
	prompt = false
	keepBackup = false
[commit]
	verbose = true
[rebase]
	missingCommitsCheck = error
	autoSquash = true
[interactive]
	singleKey = true
	diffFilter = diff-highlight
[color "diff"]
	meta = reverse bold
[diff]
	submodule = log
	colorMoved = dimmed_zebra
[diff "swift"]
	xfuncname = ^\\s*(.*(func \\w|subscript\\(|init\\??\\(|deinit |class \\w|struct \\w|protocol \\w|extension \\w).*)$
[push]
	recurseSubmodules = on-demand
[alias]
	template = -c init.templateDir=~/.config/git/template init
	hook = !sh -c '[ -f $0 ] || git template && $0' $(git rev-parse --git-dir)/hooks/post-commit
