#!/bin/bash
set -eu

lp_version=3

server="$(vk-api messages.getLongPollServer -d lp_version="$lp_version" -d use_ssl=1 -d need_pts=1 | jq '.response')"

echo >&2 "$server"

url="https://$(echo $server | jq -r '.server')"
key="$(jq <<<"$server" -r '.key')"
ts="$(jq <<<"$server" -r '.ts')"
pts="$(jq <<<"$server" -r '.pts')"

mode=$((2#11101010))

while true; do
	result=$(
		curl \
			--silent \
			--show-error \
			--fail \
			--get \
			--url "$url" \
			-d act=a_check \
			-d key="$key" \
			-d wait=20 \
			-d mode="$mode" \
			-d version="$lp_version" \
			-d ts="$ts"
	)
	echo "$(jq <<<"$result" -r '.updates[]')"
	ts="$(jq <<<"$result" -r '.ts')"
	pts="$(jq <<<"$result" -r '.pts')"
	echo >&2 "$ts/$pts"
done
