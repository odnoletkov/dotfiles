#!/bin/bash

set -eu

method="${1:?undefined method name}"
shift

user="${VK_USER:-74141}"

token=$(security find-generic-password -s api.vk.com -a "$user" -w)
version=5.65

curl \
   --silent \
   --show-error \
   --fail \
   -d v=$version \
   -d access_token="$token" \
   --url "https://api.vk.com/method/$method" \
   "$@"
